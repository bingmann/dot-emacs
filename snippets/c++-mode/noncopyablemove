//! non-copyable: delete copy-constructor
${1:class}(const $1 &) = delete;
//! non-copyable: delete assignment operator
$1 & operator = (const $1 &) = delete;
//! move-constructor: default
$1($1 &&) = default;
//! move-assignment operator: default
$1 & operator = ($1 &&) = default;